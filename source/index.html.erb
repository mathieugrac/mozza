<!-- CLIENTS -->
<section class="clients">
	<div class="container">
		<div class="row">
			<% data.collabs.each do |collab| %>
			<div class="col-xs-6 col-sm-4 col-md-2 ph4">
					<%= image_tag 'clients/' + collab.pic %>
			</div>
			<% end %>
		</div>
	</div>
</section>

<!-- OFFERS -->
<section class="offers">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 text-center">
				<h3 class="meta-50 mb5">How can we help you?</h3>
			</div>
			<div class="col-xs-12 col-md-6">
				<% link_to '/create-with-mozza.html', {:class=> 'offer-item'} do %>
					<%= image_tag "mozza-create.svg", {:class=> 'mozza-illustrations mb3'}%>
					<h2 class="offer-item-title">Create.</h2>
					<p class="offer-item-desc p-large">From idea to launch, we challenge your product strategy and help you design a simple yet engaging MVP for your first users.</p>
					<p class="offer-item-cta text-link">Learn More</p>
				<% end %>
			</div>
			<div class="col-xs-12 col-md-6">
				<% link_to '/scale-with-mozza.html', {:class=> 'offer-item'} do %>
					<%= image_tag "mozza-scale.svg", {:class=> 'mozza-illustrations mb3'} %>
					<h2 class="offer-item-title">Scale.</h2>
					<p class="offer-item-desc p-large">We support growing startups on ad-hoc design projects and bring a fresh eyes to complex product challenges.</p>
					<p class="offer-item-cta text-link">Learn More</p>
				<% end %>
			</div>
		</div>
	</div>
</section>

